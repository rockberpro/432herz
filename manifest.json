{
    "manifest_version": 3,
    "name": "432Herz",
    "version": "1.0.0",
    "description": "Play your YouTube videos in 432Hz",
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["popup.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "48": "48.png",
            "128": "128.png",
            "256": "256.png"
        }
    },
    "permissions": ["activeTab", "scripting", "tabs", "storage"],
    "host_permissions": ["<all_urls>"]
}