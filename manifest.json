{
    "manifest_version": 3,
    "name": "432Herz",
    "version": "1.0.1",
    "description": "Play your YouTube videos in 432Hz",
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["youtube_injector.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "48": "48.png",
            "128": "128.png",
            "256": "256.png"
        }
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png",
        "256": "256.png"
    }
}